{
  "name": "run-mapper",
  "version": "1.0.0",
  "repository": "git@github.com:gunnarbirnir/run-mapper.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace run-mapper-frontend dev",
